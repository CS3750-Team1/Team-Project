@page
@model Coding_Coalition_Project.Pages.SignIn.signinModel
@{
    ViewData["Title"] = "signin";
}

<hr />

<div class="login-form" style="width: 340px; margin: 50px auto;">
    <form method="post" style="margin-bottom: 15px; background: #f7f7f7; box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3); padding: 30px;">
        <h2 class="text-center" style="margin: 0 0 15px;">Log in</h2>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="UserInfo.Email" class="control-label">Email</label>
            <input asp-for="UserInfo.Email" class="form-control" />
            <span asp-validation-for="UserInfo.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="form-group">
                <label asp-for="UserInfo.Password" class="control-label">Password</label>
                <input asp-for="UserInfo.Password" class="form-control" />
                <span asp-validation-for="UserInfo.Password" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block" style=" font-size: 15px; font-weight: bold;">Sign in</button>
        </div>
        
    </form>
   
</div>