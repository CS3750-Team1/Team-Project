@page
@model Coding_Coalition_Project.Pages.AccountBalance.AccountPaymentModel
@using Microsoft.Extensions.Options
@inject IOptions<Coding_Coalition_Project.Data.StripeSettings> Stripe 
@{
    ViewData["Title"] = "AccountPayment";
    Layout = "~/Pages/Shared/_Navbar.cshtml";

}



<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://js.stripe.com/v3/"></script>

</head>
<body>
    <h1>Account Payment</h1>
    <div>
        <form asp-controller="AccountPayment" method ="POST">
            <article>
                <label>Amount: @Model.AmountMoney</label>
            </article>
            <script src="//checkout.stripe.com/v2/checkout.js"
                    class="stripe-button"
                    data-key="@Stripe.Value.PublishableKey"
                    data-locale="auto"
                    data-description="Sample Charge"
                    data-amount="@Model.AmountInt">
            </script>
        </form>
    </div>
</body>
</html>
