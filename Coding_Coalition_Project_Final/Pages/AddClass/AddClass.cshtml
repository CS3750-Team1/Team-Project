@page
@model Coding_Coalition_Project.Pages.AddClass.AddClassModel
@{
    Layout = "~/Pages/Shared/_Navbar.cshtml";
}


@{
    ViewData["Title"] = "AddClass";
    bool isInstructor = Model.UserInfo.IsInstructor;
}

<h1>AddClass</h1>

<h4>Courses</h4>
<hr />
<div class="row">
    @if (Model.IsInstructor == 1)
    {
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Courses.CourseName" class="control-label"></label>
                <input asp-for="Courses.CourseName" class="form-control" />
                <span asp-validation-for="Courses.CourseName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Courses.CourseSubject" class="control-label"></label>
                <input asp-for="Courses.CourseSubject" class="form-control" />
                <span asp-validation-for="Courses.CourseSubject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Courses.CourseNumber" class="control-label"></label>
                <input asp-for="Courses.CourseNumber" class="form-control" />
                <span asp-validation-for="Courses.CourseNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Courses.CourseCredits" class="control-label"></label>
                <input asp-for="Courses.CourseCredits" class="form-control" />
                <span asp-validation-for="Courses.CourseCredits" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Courses.CourseLocation" class="control-label"></label>
                <input asp-for="Courses.CourseLocation" class="form-control" />
                <span asp-validation-for="Courses.CourseLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Courses.CourseCapacity" class="control-label"></label>
                <input asp-for="Courses.CourseCapacity" class="form-control" />
                <span asp-validation-for="Courses.CourseCapacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Courses.CourseMeetingTime" class="control-label"></label>
                <input asp-for="Courses.CourseMeetingTime" class="form-control" />
                <span asp-validation-for="Courses.CourseMeetingTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Courses.CourseMeetingDay" class="control-label"></label>
                <input asp-for="Courses.CourseMeetingDay" class="form-control" />
                <span asp-validation-for="Courses.CourseMeetingDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
    }
    else
    {
        <p>You do not have permission to add classes. Please become an instructor then try again.</p>
    }
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
