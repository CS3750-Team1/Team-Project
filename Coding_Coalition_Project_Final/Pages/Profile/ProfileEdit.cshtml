@page
@model Coding_Coalition_Project.Pages.Profile.ProfileEditModel
@{
    ViewData["Title"] = "ProfileEdit";
    Layout = "~/Pages/Shared/_Navbar.cshtml";
}

<h1>ProfileEdit</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserInfo.ID" />
            <div class="form-group">
                <label asp-for="UserInfo.FirstName" class="control-label">First Name</label>
                <input asp-for="UserInfo.FirstName" class="form-control" value="@Convert.ToString(Model.UserInfo.FirstName)" />
                <span asp-validation-for="UserInfo.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserInfo.LastName" class="control-label">Last Name</label>
                <input asp-for="UserInfo.LastName" class="form-control" value="@Convert.ToString(Model.UserInfo.LastName)" />
                <span asp-validation-for="UserInfo.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserInfo.Email" class="control-label">Email</label>
                <input asp-for="UserInfo.Email" class="form-control" value="@Convert.ToString(Model.UserInfo.Email)" />
                <span asp-validation-for="UserInfo.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserInfo.Birthdate" class="control-label">Birth Date</label>
                <input asp-for="UserInfo.Birthdate" class="form-control" value="@Convert.ToString(Model.UserInfo.Birthdate)" />
                <span asp-validation-for="UserInfo.Birthdate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserInfo.Password" class="control-label">Password</label>
                <input asp-for="UserInfo.Password" class="form-control" />
                <span asp-validation-for="UserInfo.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserInfo.ImagePath" class="control-label">Upload Image: </label>
                <input type="file" asp-for="UserInfo.ImagePath" class="form-control-file"  />
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="UserInfo.IsInstructor" /> @Html.DisplayNameFor(model => model.UserInfo.IsInstructor)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-page="../Profile/Profile">Cancel</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
